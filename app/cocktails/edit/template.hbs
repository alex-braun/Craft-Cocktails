<h2>Edit Cocktail</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the Cocktail"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Category</label>
    <div class="col-sm-10">
      {{input type="text" value=model.category class="form-control" placeholder="Category/type of Cocktail"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Ingredients</label>
    <div class="col-sm-10">
      {{input type="text" value=model.ingredients class="form-control" placeholder="Ingredients"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Directions</label>
    <div class="col-sm-10">
      {{input type="text" value=model.directions class="form-control" placeholder="Directions"}}
    </div>
  </div>
