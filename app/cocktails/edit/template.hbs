    <label class="col-sm-2 control-label">Upload Picture</label>
    <div class="col-sm-10">
      {{input type="text" value=model.imageurl class="form-control" placeholder="Upload Picture"}}
    </div>
  </div> --}}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveCocktail' model}}>Save changes</button>
    </div>
  </div>
</div>
