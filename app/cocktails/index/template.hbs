<h2>List</h2>

<div class="row">

{{!-- <div class="row"> --}}
  <div class="col-md-1 all-button">
    {{#link-to (query-params limit='all' letter='') class='btn btn-default btn-lg btn-block'}}All{{/link-to}}
  </div>
  {{!-- <div class="col-md-1">
    {{#link-to (query-params limit='abc') class='btn btn-default btn-lg btn-block'}}Abc{{/link-to}}
  </div> --}}

  <div class="col-md-10">
    {{#if limitAll}}
      <div class="form-group">
        {{input value=filter class="form-control search-cocktail input-lg" placeholder="Filter by cocktail name"}}
      </div>
    {{else}}
        <div class="form-group">
          {{abc-buttons}}
        </div>
    {{/if}}
  </div>
</div>

{{!-- <div class="col-md-8 col-md-offset-1 row"> --}}
<div class="row">
  {{#each filteredList as |cocktail|}}
    <div class="col-md-4 each-recipe">

      {{#cocktail-item item=cocktail}}
      {{#if isAdmin}}
        {{#link-to 'cocktails.edit' cocktail.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteCocktail' cocktail}}>Delete</button>
      {{else if cocktail.editable}}
        {{#link-to 'cocktails.edit' cocktail.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteCocktail' cocktail}}>Delete</button>
      {{/if}}
      {{/cocktail-item}}

    </div>
  {{else}}
    {{#if model.isUpdating}}
      {{spinner-cube}}
    {{else}}
      <div class="col-md-12 text-center">
        <div class="alert alert-info">
          Sorry, no cocktails match that search.
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>
